# Copy this file to .env and configure your settings

# =============================================================================
# AI Configuration
# =============================================================================
# Enable/disable AI device analysis
AI_ENABLED=true

# OpenAI API Key (required if AI_ENABLED=true)
# Get your API key from: https://platform.openai.com/api-keys
AI_API_KEY=sk-proj-your-api-key-here

# AI Provider (currently only 'openai' supported)
AI_PROVIDER=openai


# =============================================================================
# Network Configuration
# =============================================================================
# Default network range to scan (CIDR notation)
DEFAULT_NETWORK=192.168.1.0/24

# Preferred network interface (leave empty for auto-detection)
PREFERRED_INTERFACE=


# =============================================================================
# Scan Settings
# =============================================================================
# Scan timeout in seconds
SCAN_TIMEOUT=300

# Number of top ports to scan
TOP_PORTS=200

# Enable automatic refresh of device list
AUTO_REFRESH=true

# Default view mode: 'table' or 'cards'
VIEW_MODE=table


# =============================================================================
# Flask Configuration
# =============================================================================
# Flask environment: 'development' or 'production'
FLASK_ENV=production

# Flask debug mode: 'true' or 'false'
FLASK_DEBUG=false


# =============================================================================
# Security
# =============================================================================
# Secret key for Flask sessions (change this in production!)
SECRET_KEY=changeme_in_production_please_use_random_string_here